<?xml version="1.0"?>
<!--
================================================================================
draw.io BUILD (github-build.xml)
================================================================================

This file contains all targets needed to build draw.io from source.

USAGE:
  ant -f github-build.xml        (runs 'all' target)
  ant -f github-build.xml app    (runs just the app target)

REQUIREMENTS:
  - Java JDK (for Ant and Closure Compiler)
  - Apache Ant
  - Google Closure Compiler JAR (path configured in build.properties)
  - Xml2Js.class in etc/build/ (converts stencil XML to JS)

OUTPUT FILES (in src/main/webapp/js/):
  - app.min.js          : Full editor application
  - viewer.min.js       : Standalone diagram viewer
  - viewer-static.min.js: Viewer with shapes embedded
  - extensions.min.js   : Import/export extensions (VSDX import, Mermaid, GraphML)
  - shapes-14-6-5.min.js: Shape definitions
  - stencils.min.js     : Stencil definitions
  - integrate.min.js    : Embedding integration bundle

================================================================================
-->
<project basedir="." default="all">
	
	<property file="build.properties.local" />
	<property file="build.properties" />
	<taskdef name="jscomp" classname="com.google.javascript.jscomp.ant.CompileTask" classpath="${jscompiler}" />

	<!--
	============================================================================
	TARGET: merge
	============================================================================
	Combines shape and stencil JavaScript files into minified bundles.
	
	PROCESS:
	  1. Concatenates all JS from shapes/ and stencils/ directories
	  2. Runs Xml2Js to convert stencil XML files to JavaScript
	  3. Minifies combined shapes.js with Closure Compiler
	
	OUTPUTS:
	  - js/shapes-14-6-5.min.js : Minified shape definitions
	  - js/stencils.min.js      : Stencil definitions from XML
	============================================================================
	-->
	<target name="merge">
    	<concat destfile="${basedir}/../../build/shapes.js" fixlastline="yes" append="no">
    		<fileset dir="${war.dir}/shapes" includes="**/*.js"/>
    		<fileset dir="${war.dir}/stencils" includes="**/*.js"/>
    	</concat>
    	
		<java fork="false" classname="Xml2Js" classpath=".">
			<arg value="../../src/main/webapp/stencils"/>
			<arg value="../../src/main/webapp/js/stencils.min.js"/>
		</java>
		
		<jscomp compilationLevel="simple" debug="false" forceRecompile="true" output="${war.dir}/js/shapes-14-6-5.min.js">
			<sources dir="${basedir}/../../build">
				<file name="shapes.js" />
			</sources>
		</jscomp>
		
		<tstamp>
      		<format property="time.stamp" pattern="MM/dd/yyyy hh:mm aa" unit="hour"/>
  		</tstamp>
		
		<delete dir="${basedir}/../../build"/>
	</target>

	<!--
	============================================================================
	TARGET: app (depends on merge)
	============================================================================
	Main compilation target - builds all core application JavaScript.
	
	PROCESS:
	  1. Creates runtime config (proxy URLs, base paths)
	  2. Generates Graph-Stylesheet.js from styles/default.xml
	  3. Generates Graph-Resources.js from resources/dia.txt
	  4. Compiles grapheditor components (Editor, Sidebar, Graph, etc.)
	  5. Compiles all Sidebar-*.js shape libraries
	  6. Compiles client.min.js (mxGraph core + init)
	  7. Builds base-viewer.min.js (lightweight viewer)
	  8. Builds viewer.min.js and viewer-static.min.js
	  9. Builds extensions.min.js (VSDX import, Mermaid, GraphML, OrgChart)
	  10. Builds app.min.js (full editor with cloud integrations and Simple.js)
	
	OUTPUTS:
	  - js/viewer.min.js        : Standalone viewer
	  - js/viewer-static.min.js : Viewer with embedded shapes
	  - js/app.min.js           : Full editor application
	  - js/extensions.min.js    : Import/export extensions
	  - js/orgchart.min.js      : Org chart layout library
	
	TEMPORARY FILES (created then deleted):
	  - Graph-Stylesheet.js, Graph-Resources.js
	  - grapheditor.min.js, sidebar.min.js, client.min.js
	  - .tmp0.js, .tmp1.js, .tmp2.js, .tmp3.js, etc.
	============================================================================
	-->
	<target name="app" depends="merge">
		<!-- Step 1: Create runtime configuration -->
		<delete file="${basedir}/.tmp0.js"/>
		<echo file="${basedir}/.tmp0.js">
			window.PROXY_URL = window.PROXY_URL || 'https://viewer.diagrams.net/proxy';
			window.STYLE_PATH = window.STYLE_PATH || 'https://viewer.diagrams.net/styles';
			window.SHAPES_PATH = window.SHAPES_PATH || 'https://viewer.diagrams.net/shapes';
			window.STENCIL_PATH = window.STENCIL_PATH || 'https://viewer.diagrams.net/stencils';
			window.DRAW_MATH_URL = window.DRAW_MATH_URL || 'https://viewer.diagrams.net/math4/es5';
			window.GRAPH_IMAGE_PATH  = window.GRAPH_IMAGE_PATH || 'https://viewer.diagrams.net/img';
